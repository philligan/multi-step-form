{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "at-rules",
      "custom-properties",
      "dollar-variables",
      "declarations",
      "rules",
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "mq",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "media",
        "hasBlock": true
      }
    ],
    "order/properties-order": [
      [
        "$extend",
        "$include",
        "content",
        "appearance",
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "z-index",
        "clear",
        "visibility",
        "display",
        "flex",
        "flex-basis",
        "flex-direction",
        "flex-flow",
        "flex-grow",
        "flex-shrink",
        "flex-wrap",
        "-ms-grid",
        "grid",
        "-ms-grid-columns",
        "grid-template-columns",
        "grid-template-rows",
        "grid-template-areas",
        "grid-gap",
        "gap",
        "grid-auto-flow",
        "grid-auto-columns",
        "grid-auto-rows",
        "-ms-grid-column",
        "grid-column-start",
        "grid-column",
        "-ms-grid-column-span",
        "grid-column-end",
        "-ms-grid-row",
        "grid-row-start",
        "grid-row",
        "-ms-grid-row-span",
        "grid-row-end",
        "justify-content",
        "justify-self",
        "align-content",
        "align-items",
        "align-self",
        "place-content",
        "order",
        "grid-area",
        "float",
        "margin",
        "margin-top",
        "margin-right",
        "margin-bottom",
        "margin-left",
        "padding",
        "padding-top",
        "padding-right",
        "padding-bottom",
        "padding-left",
        "height",
        "width",
        "max-width",
        "max-height",
        "min-width",
        "min-height",
        "aspect-ratio",
        "object-fit",
        "object-position",
        "overflow",
        "overflow-x",
        "overflow-y",
        "overflow-wrap",
        "clip",
        "clip-path",
        "box-sizing",
        "background",
        "background-attachment",
        "background-clip",
        "background-color",
        "background-image",
        "background-origin",
        "background-position",
        "background-position-x",
        "background-position-y",
        "background-repeat",
        "background-size",
        "border",
        "border-color",
        "border-collapse",
        "border-image",
        "border-image-source",
        "border-image-slice",
        "border-image-width",
        "border-image-outset",
        "border-image-repeat",
        "border-top",
        "border-top-width",
        "border-top-style",
        "border-top-color",
        "border-right",
        "border-right-width",
        "border-right-style",
        "border-right-color",
        "border-bottom",
        "border-bottom-width",
        "border-bottom-style",
        "border-bottom-color",
        "border-left",
        "border-left-width",
        "border-left-style",
        "border-left-color",
        "border-radius",
        "border-top-left-radius",
        "border-top-right-radius",
        "border-bottom-right-radius",
        "border-bottom-left-radius",
        "border-spacing",
        "border-style",
        "border-width",
        "box-shadow",
        "fill",
        "filter",
        "outline",
        "outline-width",
        "outline-style",
        "outline-color",
        "outline-offset",
        "opacity",
        "table-layout",
        "empty-cells",
        "caption-side",
        "color",
        "font",
        "font-family",
        "font-size",
        "font-style",
        "font-weight",
        "letter-spacing",
        "line-height",
        "counter-reset",
        "counter-increment",
        "list-style",
        "list-style-position",
        "list-style-type",
        "list-style-image",
        "text-align",
        "text-align-last",
        "text-decoration",
        "text-decoration-skip-ink",
        "text-emphasis",
        "text-emphasis-color",
        "text-emphasis-style",
        "text-emphasis-position",
        "text-indent",
        "text-justify",
        "text-shadow",
        "text-outline",
        "text-transform",
        "text-wrap",
        "text-overflow",
        "text-overflow-ellipsis",
        "text-overflow-mode",
        "vertical-align",
        "white-space",
        "word-break",
        "word-spacing",
        "word-wrap",
        "quotes",
        "resize",
        "cursor",
        "-webkit-user-select",
        "-moz-user-select",
