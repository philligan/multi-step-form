{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "always"
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "eslint.validate": [
    "",
    "html",
    "javascript"
  ],
  "files.eol": "\n",
  "stylelint.enable": true,
  "stylelint.validate": [
    "scss",
    "css",
    "html"
  ],
}